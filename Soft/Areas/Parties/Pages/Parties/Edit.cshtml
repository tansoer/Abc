@page
@using Abc.Aids.Enums
@using Abc.Pages.Common.Extensions
@using Abc.Soft.Pages.Components
@model Abc.Pages.Parties.PartyPage

@{
    Layout = "_Edit";
}
<body>
    @Html.EditItem(Model)
