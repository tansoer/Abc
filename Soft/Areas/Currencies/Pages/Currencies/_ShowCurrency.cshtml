@using Abc.Aids.Reflection
@using Abc.Facade.Currencies
@using Abc.Pages.Common.Aids
@using Abc.Pages.Common.Consts
@using Abc.Pages.Common.Extensions
@model Abc.Pages.Currencies.CurrenciesPage

<body>
    @if (Model.Countries.Count != 0)
    {
        <h3>Countries for selected currency</h3>
        <table class="table">
            <tr>
                <th>@(GetMember.DisplayName<CurrencyUsageView>(x => x.CountryId))</th>
                <th>@(GetMember.DisplayName<CurrencyUsageView>(x => x.CurrencyNativeName))</th>
                <th>@(GetMember.DisplayName<CurrencyUsageView>(x => x.Details))</th>
                <th>@(GetMember.DisplayName<CurrencyUsageView>(x => x.ValidFrom))</th>
                <th>@(GetMember.DisplayName<CurrencyUsageView>(x => x.ValidTo))</th>
            </tr>

            @foreach (var item in Model.Countries)
            {
                <tr>
                    <td> @Html.DisplayFor(modelItem => item.CountryId) </td>
                    <td> @Html.DisplayFor(modelItem => item.CurrencyNativeName) </td>
                    <td> @Html.DisplayFor(modelItem => item.Details) </td>
                    <td> @Html.DisplayFor(modelItem => item.ValidFrom) </td>
                    <td> @Html.DisplayFor(modelItem => item.ValidTo) </td>
                </tr>
            }

        </table>
    }

    @if (Model.Rates.Count != 0)
    {
        <h3>Rates for selected currency </h3>
        <table class="table">
            <tr>
                <th>@(GetMember.DisplayName<ExchangeRateView>(x => x.RateTypeId))</th>
                <th>@(GetMember.DisplayName<ExchangeRateView>(x => x.Rate))</th>
                <th>@(GetMember.DisplayName<ExchangeRateView>(x => x.ValidFrom))</th>
                <th>@(GetMember.DisplayName<ExchangeRateView>(x => x.ValidTo))</th>
            </tr>

            @foreach (var item in Model.Rates)
            {
                <tr>
                    <td> @Html.DisplayFor(modelItem => item.RateTypeId) </td>
                    <td> @Html.DisplayFor(modelItem => item.Rate) </td>
                    <td> @Html.DisplayFor(modelItem => item.ValidFrom) </td>
                    <td> @Html.DisplayFor(modelItem => item.ValidTo) </td>
                </tr>
            }

        </table>
    }

</body>
